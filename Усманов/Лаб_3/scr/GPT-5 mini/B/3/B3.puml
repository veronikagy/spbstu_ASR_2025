@startuml
' Определяем классы
class Человек {
    -имя: String
    -фамилия: String
    -датаРождения: Date
    +вход()
    +выход()
}

class Читатель {
    -номерЧитательскогоБилета: String
    +бронироватьКнигу()
    +взятьКнигу()
}

class Библиотекарь {
    -номерСотрудника: String
    +выдатьКнигу()
    +принятьВозврат()
}

class Администратор {
    +создатьОтчёт()
    +управлятьШтрафами()
}

class Книга {
    -название: String
    -автор: String
    -ISBN: String
    +доступность(): Boolean
}

class ВыдачаКниги {
    -датаВыдачи: Date
    -датаВозврата: Date
}

class Штраф {
    -сумма: Float
    -причина: String
}

class Бронирование {
    -датаБронирования: Date
}

class Отчёт {
    -типОтчёта: String
    -датаСоздания: Date
}

' Наследование
Человек <|-- Читатель
Человек <|-- Библиотекарь
Библиотекарь <|-- Администратор

' Ассоциации и композиции
Читатель "1" --> "0..*" ВыдачаКниги : берет
ВыдачаКниги "1" --> "1" Книга : выдана
ВыдачаКниги "0..1" --> "0..1" Штраф : можетСоздать

Читатель "1" --> "0..*" Бронирование : делает
Бронирование "1" --> "1" Книга : относится

Администратор "1" --> "0..*" Отчёт : создает

' Агрегация (Библиотека содержит книги)
class Библиотека {
    -название: String
    -адрес: String
}
Библиотека "1" o-- "0..*" Книга : содержит

@enduml

