@startuml
' Определение классов

class Человек {
    - имя: String
    - фамилия: String
    - датаРождения: Date
    - email: String
    - телефон: String
}

class Читатель {
    - читательID: int
    - регистрацияДата: Date
    - статус: String
}

class Библиотекарь {
    - сотрудникID: int
    - датаПриема: Date
}

class Администратор {
    - сотрудникID: int
    - уровеньДоступа: String
}

class Книга {
    - ISBN: String
    - название: String
    - автор: String
    - годИздания: int
    - статус: String
}

class Выдача {
    - выдачаID: int
    - датаВыдачи: Date
    - датаВозврата: Date
}

class Бронирование {
    - бронированиеID: int
    - датаБронирования: Date
    - статус: String
}

' Определение наследования
Читатель --|> Человек
Библиотекарь --|> Человек
Администратор --|> Человек

' Определение связей
Читатель "1" -- "0..*" Выдача : получает
Книга "1" -- "0..*" Выдача : выдана
Читатель "1" -- "0..*" Бронирование : делает
Книга "1" -- "0..*" Бронирование : бронируется
Библиотекарь "1" -- "0..*" Выдача : оформляет
Библиотекарь "1" -- "0..*" Бронирование : подтверждает
Администратор "1" -- "0..*" Книга : управляет

@enduml

