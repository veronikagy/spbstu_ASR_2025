@startuml

' Определения полей и методов для лучшего отображения
hide empty members
skinparam groupInheritance 2

class Библиотека {
  - название: String
  - адрес: String
  - добавитьКнигу(книга: Книга)
  - удалитьКнигу(книга: Книга)
  - зарегистрироватьЧлена(член: ЧленБиблиотеки)
}

class Книга {
  - ISBN: String
  - название: String
  - автор: String
  - годИздания: int
  - доступна: boolean = true
  + взятьНапрокат()
  + вернуть()
}

class Автор {
  - идентификатор: int
  - имя: String
  - библиография: List<String>
  + добавитьКнигу(названиеКниги: String)
}

class ЧленБиблиотеки {
  - номерЧленства: String
  - имя: String
  - email: String
  - телефон: String
  - активен: boolean = true
  + взятьКнигу(книга: Книга): boolean
  + вернутьКнигу(книга: Книга)
}

class ЗаписьОВыдаче {
  - id: int
  - датаВыдачи: Date
  - ожидаемаяДатаВозврата: Date
  - фактическаяДатаВозврата: Date
  - статус: String
  + рассчитатьШтраф(): double
}

class Каталог {
  - книги: List<Книга>
  + найтиПоНазванию(название: String): List<Книга>
  + найтиПоАвтору(автор: String): List<Книга>
  + найтиПоИSBN(isbn: String): Книга
}

' Связи между классами

Библиотека "1" *-- "1" Каталог : содержит
Библиотека "1" *-- "many" ЧленБиблиотеки : управляет

Каталог "1" *-- "many" Книга : содержит

Книга "many" -- "1" Автор : написана

ЧленБиблиотеки "1" *-- "many" ЗаписьОВыдаче : имеет

ЗаписьОВыдаче "many" -- "1" Книга : относится к

@enduml
